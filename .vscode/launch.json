{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run CLI (Analyze)",
            "type": "python",
            "request": "launch",
            "module": "cli.main",
            "args": ["analyze"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run Dashboard (Streamlit)",
            "type": "python",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/dashboard/app.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}